package lab.two;
import java.util.*;
public class ExerciseTwo {
     private String[] sortStrings(String []arr) {
    	 String[] temp= new String[arr.length];
		Arrays.sort(arr);
		if(arr.length/2==0) {
			for(int i=0;i<arr.length/2;i++) {
				temp[i]=arr[i].toUpperCase();
			}
			for(int i=arr.length/2;i<arr.length;i++)
				temp[i]=arr[i].toLowerCase();
		}
		return temp;
	}
public static void main(String[] args){
	System.out.println("Enter the number of string objects");
	Scanner scanner = new Scanner(System.in);
	int length=scanner.nextInt();
	String[] strArray = new String[length];
	for(int i=0;i<length;i++) {
		strArray[i]=scanner.nextLine();}
	scanner.close();
		ExerciseTwo obj= new ExerciseTwo();
		String A[]= new String[length];
		A =obj.sortStrings(strArray);
		System.out.println("Sorted String is "+Arrays.toString(A));
	
}
}

