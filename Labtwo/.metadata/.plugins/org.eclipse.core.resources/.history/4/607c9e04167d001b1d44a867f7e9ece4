      }
      public void reverseNumberInArray(int[] arr) {
    	  int []temp = new int[arr.length];
    	  for(int i=0;i<arr.length;i++) {
    		  while(arr[i]!=0) {
    		  int digit=arr[i]%10;
    		  temp[i]=(temp[i]*10)+digit;
    		  arr[i]=arr[i]/10;
    		  }
    	}
    	  for(int x:temp) {
    		  System.out.println(x);
    	  }
      }
